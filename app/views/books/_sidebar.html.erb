<div class="col-md-4">
  <div class="row">
    <h2>User info</h2>
    <p>
      <%= image_tag user.get_profile_image(100, 100) %>
    </p>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
    </table>

      <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary col-md-4' do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

  </div>

  <div class="row">
    <h2>New book</h2>
    <%= form_with model: book, url: books_path, method: :post do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</div>