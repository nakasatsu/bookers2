<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="row">
        <h2>User info</h2>
        <p>
          <%= image_tag @user.get_profile_image(100, 100) %>
        </p>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="row">
        <h2>New book</h2>
        <%= form_with model: @Book, url: books_path, method: :post do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-8">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100, 100) %><br>
                <%= @user.name %>
              <% end %>
              
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <p><%= link_to "Edit", edit_book_path(@book.id) %></p>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-comfirm" => "本当に削除しますか？" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>