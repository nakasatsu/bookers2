<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="row">
        <h2>User info</h2>

      </div>
      <div class="row">
        <h2>New book</h2>
        <%= form_with model: @Book, url: books_path, method: :post do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-8">
      <h2>Book detail</h2>

      <%= @book.title %>
      <%= @book.body %>
      <p><%= link_to "Edit", edit_book_path(@book.id) %></p>
      <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-comfirm" => "本当に削除しますか？" %>
    </div>
  </div>
</div>