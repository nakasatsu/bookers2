<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="row">
        <h2>User info</h2>
      </div>
      <div class="row">
        <h2>New book</h2>
      </div>
    </div>
    <div class="col-lg-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag 'sample-author1.jpg' %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>