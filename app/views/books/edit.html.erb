<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-5 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: 'btn btn-success' %>
        </div>
      <% end %>

      <span><%= link_to "Show", book_path(@book.id) %> | </span>
      <span><%= link_to "Back", books_path %></span>
    </div>
  </div>
</div>


