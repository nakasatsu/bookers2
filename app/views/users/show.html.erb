<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="row">
        <h2>User info</h2>
        <%= @user.name %>
        <%= @user.introduction %>
      </div>
      <div class="row">
        <h2>New book</h2>
        <%= form_with model: @book, url: books_path, method: :post do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-8">
      <h2>Books</h2>
    </div>
  </div>
</div>