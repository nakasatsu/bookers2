<% if @user.errors.any? %>
  <%= @user.errors.count %> errors occured.
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, id:"inputName" %><br>
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, accept: "image/*", id: "inputImage" %><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction, id: "inputIntroduction" %><br>
  <%= f.submit "Update User" %>
<% end %>